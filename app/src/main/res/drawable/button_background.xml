<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Цвет при нажатии -->
            <stroke android:width="2dp" android:color="#000"/> <!-- Рамка -->
            <corners android:radius="4dp"/> <!-- Закругленные углы -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/> <!-- Цвет кнопки -->
            <stroke android:width="2dp" android:color="#000"/> <!-- Рамка -->
            <corners android:radius="4dp"/> <!-- Закругленные углы -->
        </shape>
    </item>
</selector>
